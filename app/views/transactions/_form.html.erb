<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :number %>

    <%= f.input :date %>

    <%= f.input :description %>

    <%= f.input :amount %>

    <%= f.input :credit %>

    <%= f.association :account %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
