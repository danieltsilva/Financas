<h1>Listing bills</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Payment date</th>
    <th>Payment method</th>
    <th>Amount</th>
    <th>Paid</th>
    <th>Account</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.number %></td>
    <td><%= bill.payment_date %></td>
    <td><%= bill.payment_method %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.paid %></td>
    <td><%= bill.account %></td>
    <td><%= bill.category %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

