<%= simple_form_for(@bill) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :number, label: 'Número de referência' %>

    <%= f.input :payment_date, label: 'Data de pagamento' %>

    <%= f.input :payment_method, label: 'Método de pagamento' %>

    <%= f.input :amount, label: 'Valor' %>

    <%= f.input :paid, label: 'Pago', disabled: true %>

    <%= f.association :account, label: 'Conta' %>

    <%= f.association :category, label: 'Categoria' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', :class => 'btn btn-small medium-blue' %>
  </div>
<% end %>
